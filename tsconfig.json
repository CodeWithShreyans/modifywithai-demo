{
	"extends": "@total-typescript/tsconfig/bundler/dom/app",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts"
	],
	"exclude": ["node_modules"]
}
